html, body, p
  font-family: primaryFont
  font-size: base-font-size
  line-height: base-line-height
  font-weight: base-font-weight
  color: darkGrey

h1, h2, h3, h4, h5, h6
  font-family: headerFont
  margin: 0

h1
  font-size: 42px
  letter-spacing: .04px
  font-weight: 700
  text-transform: uppercase
  line-height: 56px
  span
    position: relative
    &:after
      content: ''
      position: absolute
      bottom: 4px
      left: 0
      width: 100%
      border-bottom: 10px solid rgba(131,214,214,0.6)
      margin-top: -10px
  @media breakpoints.lap.breakpoint
    font-size: 32px
    line-height: 42px
    span:after
      bottom: 2px
      border-bottom: 8px solid rgba(131,214,214,0.6)
  @media breakpoints.palm.breakpoint
    font-size: 28px
    line-height: 36px
    span:after
      bottom: 2px
      border-bottom: 6px solid rgba(131,214,214,0.6)

h3
  font-size: 28px
  line-height: 38px
  font-weight: 700
  text-transform: uppercase
  letter-spacing: .04px
  @media breakpoints.lap.breakpoint
    font-size: 23px
    line-height: 33px
  @media breakpoints.palm.breakpoint
    font-size: 21px
    line-height: 31px

a
  text-decoration: none
  transition: all 0.2s ease-in-out

