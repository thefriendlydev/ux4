.primaryNav
  position: fixed
  width: 100%
  top: 0
  background-image: linear-gradient(-180deg, rgba(0,0,0,0.50) 0%, rgba(0,0,0,0.00) 100%)
  z-index: 10
  padding: 15px 0
  transition: all 0.3s ease-in-out

.primaryNav--secondary
  background-image: none
  background-color: rgba(4,30,65,0.95)
  .navLogo img
    filter: none

.primaryNav-items
  z-index: 1
  visibility: hidden
  opacity: 0
  transition: 400ms ease
  position: absolute
  background-color: #FFFFFF
  border-radius: 3px
  text-align: center

.primaryNav-items *
  z-index: 1
  visibility: hidden
  opacity: 0


.navigation-list > li:last-child a
  @extend .button
  &:hover
    color: #FFFFFF

.navigation-list
  @extend .plainList
  height: 100%
  display: inline-block
  vertical-align: middle
  margin-top: 30px
  z-index: 1
  visibility: hidden
  opacity: 0
  transition: 400ms ease
  li
    margin-bottom: 20px
    a
      color: #07418C
      @extend h2
      margin-bottom: 5px
      &:hover
        color: darken(#07418C, 10)

  .sub-menu
    @extend .plainList
    li
      a
        color: uxLightBlue
        @extend h3
        margin-bottom: 5px
        &:hover
          color: darken(uxLightBlue, 10)

.icon-close
  display: none

.primaryNav.active
  .icon-menu
    display: none
  .icon-close
    display: block
  @extend .primaryNav--secondary
  bottom: 0
  left: 0
  right: 0
  .container
    height: 100%
  .primaryNav-items
    visibility: visible
    opacity: 1
    position: fixed
    left: 15px
    right: 15px
    top: 64px
    bottom: 15px
  .primaryNav-items *
    visibility: visible
    opacity: 1


.navLogo
  display: inline-block
  img
    max-height: 30px
    width: auto
    filter: brightness(0) invert(1)

.icon-menu
  color: #FFFFFF
  font-size: 24px
  position: absolute
  right: 15px
  top: 18px
  cursor: pointer

.icon-close
  color: #FFFFFF
  font-size: 20px
  position: absolute
  right: 17px
  top: 16px
  cursor: pointer

.navContainer
  display: table
  width: 100%

.primaryNav--desk
  padding: 15px 0
  .navLogo
    img
      max-height: 40px
      @media breakpoints.lap.breakpoint
        max-height: 35px

  .primaryNav-items
    position: static
    visibility: visible
    opacity: 1
    background-color: transparent
    *
      visibility: visible
      opacity: 1

  .navigation-list
    margin-top: 0
    display: block
    text-align: right
    li
      margin-bottom: 0
      display: inline-block
      margin-left: 20px

      a
        font-size: 18px
        font-weight: 400
        color: #FFFFFF
        @media breakpoints.lap.breakpoint
          font-size: 16px
        &:hover
          opacity: 0.8

    li:last-child a:hover
      opacity: 1

  .navigation-list>li:last-child a
    margin-bottom: 0
