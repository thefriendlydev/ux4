.ux-tabs
  text-align: center
  ul
    @extend .plainList
    border: 3px solid uxRed
    display: table
    border-radius: 3px
    margin: 0 auto 10px
    li
      padding: 10px
      text-align: center
      min-width: 115px
      color: uxRed
      font-size: 14px
      font-weight: 600
      transition: all 0.2s ease-in-out
      display: table-cell
      border-right: 3px solid uxRed
      cursor: pointer
      &:last-child
        border-right: 0
      &.active
        background-color: uxRed
        color: #FFFFFF
      &:hover
        background-color: uxRed
        color: #FFFFFF

.ux-tabs .industryTabs
  border: 2px solid uxLightBlue
  .uxTab--secondary
    color: uxLightBlue
    font-size: 12px
    padding: 8px 10px
    border-right: 2px solid uxLightBlue
    &:last-child
      border-right: 0
    &.active
      background-color: uxLightBlue
      color: #FFFFFF
    &:hover
      background-color: uxLightBlue
      color: #FFFFFF

.uxTab
  width: 170px
  @media breakpoints.palm.breakpoint
    width: 115px
