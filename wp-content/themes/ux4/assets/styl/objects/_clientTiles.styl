.section.clientTiles
  padding: 0 0 50px

.grid .grid-1of1--palm.grid-1of3:last-child .clientTile
  margin-bottom: 0

.clientTile
  border: 2px solid uxBlue
  text-align: center
  border-radius: 3px
  margin-bottom: 30px
  width: 100%
  height: 100%
  display: table

.clientTile-top
  height: 100%
  display: table-row

.clientTile-topContainer
  padding: 35px 20px
  display: table-cell
  vertical-align: middle

.clientTile-logo
  max-height: 60px
  max-width: 150px
  width: auto
  height: auto
  margin: 0 auto 10px

.clientTile-bottomContainer
  padding: 10px 20px
.clientTile-bottom
  background-color: rgba(4,30,65,0.4)
  text-align: center
  display: table-row
  height: 1px
  a
    display: inline-block
    color: #FFFFFF
    text-align: center
    &:hover
      opacity: 0.8
    span, i
      display: inline-block
      vertical-align: middle

  .icon
    color: #FFFFFF
    margin-left: 3px
    font-size: 20px

.clientTile-logoText
  font-size: 32px
  font-weight: 700
  margin-bottom: 10px
  color: uxBlue
