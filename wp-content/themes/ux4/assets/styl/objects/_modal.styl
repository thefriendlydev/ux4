.serviceOverlay, .serviceModal
  visibility: hidden !important
  opacity: 0
  transition: all 0.4s ease-in-out

.serviceOverlay.active, .serviceModal.active
  visibility: visible !important
  opacity: 1

.serviceOverlay
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-color: rgba(4,30,65,0.95)
  z-index: 15

.serviceModal
  position: fixed
  width: 90%
  background-color: #FFFFFF
  border-radius: 3px
  padding: 20px 10px
  z-index: 20
  left: 5%
  top: 60px
