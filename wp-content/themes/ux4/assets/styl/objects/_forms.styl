.formLabel
  font-size: 16px
  font-weight: 600
  margin-bottom: 5px
  text-align: left

select
  box-sizing: border-box
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  border: 1px solid uxText
  padding: 8px 12px
  transition: all 0.2s ease-in-out
  margin: 0
  font-family: primaryFont
  font-size: 14px
  outline: 0
  width: 100%
  color: uxText
  background: #FFFFFF
  box-shadow: none
  background-image: none
  position: relative
  border-radius: 0
  &:focus
    outline: none

.your-interest
  &:after
    content: "\e915"
    font-family: icomoon
    font-weight: normal;
    font-style: normal;
    font-size: 12px
    position: absolute
    right: 15px
    top: 3px
    color: #a3a3a3
    pointer-events: none
    transform: rotate(90deg)

input, textarea
  box-sizing: border-box
  -webkit-appearance: none
  border: 1px solid uxText
  padding: 8px 12px
  transition: all 0.2s ease-in-out
  margin: 0
  font-family: primaryFont
  font-size: 16px
  outline: 0
  width: 100%
  color: uxText

textarea
  height: 115px

  &:focus, &:active
    outline: 0

textarea
  height: 160px

input[type=submit]
  width: auto
  height: auto

