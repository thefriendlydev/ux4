.blueCallout
  text-align: center
  background-image: linear-gradient(0deg, #052959 0%, #063573 49%, #052959 100%);
  .icon
    font-size: 80px
    color: uxGold
    margin-bottom: 25px

.blueCallout-headline
  @extend h3
  font-weight: 700
  color: #FFFFFF
  margin-bottom: 20px

.blueCallout-text
  text-align: center
  p
    color: #FFFFFF
    margin: 0 auto 15px
    line-height: 1.8
    @media breakpoints.large.breakpoint
      max-width: 470px
      font-size: 20px
      font-weight: 500
    &:last-child
      margin-bottom: 0
