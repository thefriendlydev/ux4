.blueCallout
  text-align: center
  background-image: linear-gradient(0deg, #052959 0%, #063573 49%, #052959 100%);
  .icon
    font-size: 80px
    color: uxGold
    margin-bottom: 25px

.blueCallout-headline
  @extend h3
  font-weight: 400
  color: #FFFFFF
  margin-bottom: 20px

.blueCallout-text p
  color: #FFFFFF
  margin-bottom: 15px
  &:last-child
    margin-bottom: 0
