.section.hero
  text-align: center
  padding: 0

.heroContent
  display: table-cell
  vertical-align: middle
  padding: 115px 0 75px
  height: 100%

.heroLogo img
  max-height: 60px
  max-width: 80%
  height: auto
  width: auto
  filter: brightness(0) invert(1)
  margin-bottom: 10px

.heroText
  color: #FFFFFF

.heroOrientation
  font-size: 20px
  color: #FFFFFF
  font-weight: 700
  margin-bottom: 5px

.heroHeadline
  @extend h1
  color: #FFFFFF
