.section.hero
  text-align: center
  padding: 0
  position: relative
  overflow: hidden

.heroContent
  display: table-cell
  vertical-align: middle
  padding: 115px 0 75px
  height: 100%
  @media breakpoints.large.breakpoint
    padding: 165px 0 125px
  @media breakpoints.desk.breakpoint
    padding: 195px 0 155px

.heroLogo img
  max-height: 60px
  max-width: 80%
  height: auto
  width: auto
  filter: brightness(0) invert(1)
  margin-bottom: 10px

.heroText
  color: #FFFFFF

.heroOrientation
  font-size: 20px
  color: #FFFFFF
  font-weight: 600
  margin-bottom: 5px
  @media breakpoints.large.breakpoint
    font-size: 25px

.heroHeadline
  @extend h1
  color: #FFFFFF
  @media breakpoints.large.breakpoint
    max-width: 440px
    margin: 0 auto

.heroSecondaryHeadline
  color: #FFFFFF
  font-size: 39px
  font-weight: 300

.heroSecondarySubHeadline
  color: #FFFFFF
  font-size: 45px
  font-weight: 600
  margin-top: -5px
  line-height: 1
  @media breakpoints.large.breakpoint
    margin-top: 10px

.postid-149 .heroLogo img
  filter: none none
