.iconBullet
  margin-bottom: 50px
  text-align: center

.iconBullets
  .container
    max-width: 800px
    .grid .grid-1of1:last-child .iconBullet
      margin-bottom: 0

.iconBullet > .icon
  font-size: 80px
  color: uxBlue
  margin-bottom: 20px
  @media breakpoints.large.breakpoint
    font-size: 100px

.section-headline
  @extend h3
  font-weight: 700
  color: uxBlue
  margin-bottom: 20px

.iconBullet .combo
  margin-bottom: 20px
  @media breakpoints.large.breakpoint
    max-width: 670px
  .combo-first
    padding-right: 10px
    .icon
      font-size: 16px
      color: uxRed
      margin-top: 4px
  .combo-last
    text-align: left
    padding-left: 0

.bulletImage
  text-align: left
  max-height: 400px
  max-width: 90%
  height: auto
  width: auto
  margin-top: 10px
  display: block
